<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="te_discount_report_wizard_view_form" model="ir.ui.view">
        <field name="name">te.discount.report.wizard.view</field>
        <field name="model">te.discount.report.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="from_date" />
                            <field name = "to_date"/>
                            <field name="partner_ids" widget = "many2many_tags" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button  string="Print Report" name="print_report" type="object"  class="oe_highlight"  />
                    <button string="Cancel" class="btn btn-secondary" special="cancel" icon="fa-remove" />
                </footer>
            </form>
        </field>
    </record>

    <record id="te_discount_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Discount Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">te.discount.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <menuitem id="te_discount_report_wizard_menu"
                name="Discount Report"
                parent="mb_pump_station.sub_menu_reports"
                action="te_discount_report_wizard_action"
                sequence="999"
                />

</odoo>